FROM golang:1.25-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o /app/server .

FROM alpine:3.21
RUN apk add --no-cache ca-certificates
COPY --from=builder /app/server /server
RUN chmod +x /server
COPY --from=builder /app/static /static
EXPOSE 8080
ENTRYPOINT ["/server"]
